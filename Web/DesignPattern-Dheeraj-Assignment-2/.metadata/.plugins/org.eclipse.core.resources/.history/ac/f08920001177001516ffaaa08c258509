import org.apache.log4j.Logger;

public class LoggerClass {

	private static LoggerClass loggerClass;

	public static LoggerClass getInstance() {
		
		if (loggerClass == null) {
			synchronized (loggerClass) {
				if (loggerClass == null)
					loggerClass = new LoggerClass();
			}
		}
		return loggerClass;
	}

	public static Integer performDivide(Integer numanator, Integer denominator) {
		Integer output = 0;
		try {
			output = numanator / denominator;
		} catch (ArithmeticException ae) {
			ae.printStackTrace();
		}
		return output;
	}

	private static Logger log = Logger.getLogger(LoggerClass.class);

	public static void main(String args[]) {
		log.debug("This is a debug message");
		log.info("This is a info message");

	}

}
