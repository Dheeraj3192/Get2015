<apex:page controller="AccountListController">
   <apex:form >
       <apex:pageblock >
           <apex:pageBlockSection >
              Billing City <apex:inputText value="{! BillingCty}" id="BillingCity" />
              Billing State <apex:inputText value="{!BillingStat}" id="BillingState"/>
              Billing Country <apex:inputText value="{!BillingCntry}" id="BillingCountry"/>
           <apex:commandButton action="{!getAccounts}" value="Search" id="theSearch"/>
                     
           </apex:pageBlockSection>
           <apex:outputPanel rendered="{!IF(results!=null, true, false)}">
               <apex:pageBlocktable value="{!results}" var="records"> 
                   <apex:column value="{!records.name}" headerValue="Name"/>
                   <apex:column value="{!records.BillingCity}" headerValue="Billing City"/>
                   <apex:column value="{!records.BillingState}" headerValue="Billing State"/>
                   <apex:column value="{!records.BillingCountry}" headerValue="Billing Country"/>
               </apex:pageBlocktable>
           </apex:outputPanel>
            
                 

       </apex:pageblock>
   </apex:form>
</apex:page>